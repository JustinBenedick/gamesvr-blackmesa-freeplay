    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "docker build . -f Dockerfile.linux -t ll/gamesvr-blackmesa-freeplay --no-cache --build-arg BUILDNODE=$env:computername;",
            "group": "build",
            "identifier": "build-image",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Tests",
            "type": "shell",
            "command": "docker run -it --rm ll/gamesvr-blackmesa-freeplay ./ll-tests/gamesvr-blackmesa-freeplay.sh;",
            "dependsOn": "build-image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host ll/gamesvr-blackmesa-freeplay ./srcds_run -game bms +map gasworks -maxplayers 8 +sv_lan 1;",
            "dependsOn": "build-image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm ll/gamesvr-blackmesa-freeplay;",
            "dependsOn": "build-image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Pull parent image",
            "type": "shell",
            "command": "docker pull lacledeslan/gamesvr-blackmesa;",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Update git sub-modules",
            "type": "shell",
            "command": "git submodule update --recursive; git submodule sync;",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
